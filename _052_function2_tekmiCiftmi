#include <stdio.h>
#include <stdlib.h>

// sayının çift mi tekmi kontrolü

int SayiCiftMi(int sayi)
{
    if((sayi % 2 )==0)
        return 1;
    else
        return 0;
}

int main(){
    //Kullanıcıdan sayiyi al
    int sayi;

    printf("Sayi degeri giriniz = ");
    scanf("%d",&sayi);

    //SayiCiftMi fonksiyon sonucunu gör
    if(SayiCiftMi(sayi))
        {
        printf("Bu bir cift sayidir\n ");
        }
    else{
        printf("Bu bir tek sayidir\n");
    }
return 0;

}
